{
  "manifest_version": 2,

  "name": "BenarID",
  "description": "View and give ratings from BenarID on Indonesian news articles.",
  "version": "0.1.0",

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_popup": "popup/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["main-ui.js", "badge/badge.js"],
      "run_at": "document_idle"
    }
  ],

  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "*://*.benar.id/*",
    "http://*/*",
    "https://*/*"
  ]
}
